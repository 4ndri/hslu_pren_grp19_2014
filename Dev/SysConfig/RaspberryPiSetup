# PWM Kernel Module
curl -SLs https://apt.adafruit.com/bootstrap | bash

# OpenCV
sudo apt-get install libcv-dev
sudo apt-get install python-opencv
sudo apt-get install libopencv-dev
sudo apt-get install libcv2.3


# PiCamera
sudo apt-get install python-picamera
#for python 3: sudo apt-get install python3-picamera



#PWM Driver (I2C)
sudo apt-get install python-smbus
sudo apt-get install i2c-tools

sudo nano /etc/modules
#Add following lines
i2c-dev
i2c-bcm2708

sudo nano /etc/modprobe.d/raspi-blacklist.conf
#following line should be missing or commented with#
#blacklist i2c-bcm2708

sudo i2cdetect -y 1


# network
sudo nano /etc/wpa_supplicant/wpa_supplicant.conf

# folgenden Inhalt reinkopieren
ctrl_interface=DIR=/var/run/wpa_supplicant GROUP=netdev
update_config=1

network={
    ssid="NETWORK NAME"
    psk="PASSWORD"
    id_str="pren19"
}

network={
    ssid="other"
    psk="PASSWORD"
    id_str="other"
}

sudo nano /etc/network/interfaces

# folgenden Inhalt reinkopieren
auto lo

iface lo inet loopback
iface eth0 inet dhcp

allow-hotplug wlan0
iface wlan0 inet manual
wpa-roam /etc/wpa_supplicant/wpa_supplicant.conf
iface default inet dhcp



#flask
sudo apt-get install python-pip
sudo pip install flask